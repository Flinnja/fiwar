<p id="notice"><%= notice %></p>

<h1>Kiosk View</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Time</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td><%= movement.display_name %></td>
        <td><%= movement.price %></td>
        <td><%= movement.time %></td>
        <td><%= movement.description %></td>
        <td><%= link_to 'Order', movement %></td>
      </tr>
    <% end %>
  </tbody>
</table>
