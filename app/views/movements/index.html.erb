<p id="notice"><%= notice %></p>

<h1>Movements</h1>

<%= link_to 'New Movement', new_movement_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Display name</th>
      <th>Image index</th>
      <th>Price</th>
      <th>Time</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td><%= movement.name %></td>
        <td><%= movement.display_name %></td>
        <td><%= movement.img_index %></td>
        <td><%= movement.price %></td>
        <td><%= movement.time %></td>
        <td><%= movement.description %></td>
        <td><%= link_to 'Show', movement %></td>
        <td><%= link_to 'Edit', edit_movement_path(movement) %></td>
        <td><%= link_to 'Destroy', movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

